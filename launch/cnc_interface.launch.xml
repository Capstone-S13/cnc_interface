  <launch>
    <!-- cnc_interface node-->
    <node  name="cnc_interface"  pkg="cnc_interface" type="cnc_interface.py">
      <!--Serial Port parameters-->
      <param name="baudrate"     type="double" value="115200" />
      <param name="port"         type="string" value="/dev/ttyACM0"/>
      <!--Axis acceleration values in mm/s^2  -->
      <param name="acceleration" type="int"    value="50" /> 
      <!--Workable volume in mm  -->
      <param name="x_max" type="int" value="400" />  
      <param name="y_max" type="int" value="550" />  
      <param name="z_max" type="int" value="1100" /> 
      <!-- Speed values in mm/min -->
      <param name="default_speed" type="int" value="1000" /> 
      <param name="x_max_speed"   type="int" value="2000" />  
      <param name="y_max_speed"   type="int" value="100" />
      <param name="z_max_speed"   type="int" value="2000" />    
      <!--axis steps values in steps/mm -->
      <param name="x_steps_mm" type="int" value="108" />  
      <param name="y_steps_mm" type="int" value="250" />
      <param name="z_steps_mm" type="int" value="415" />
    </node>
  </launch>
